  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "disableOptimisticBPs": true,
      "console": "integratedTerminal",
      "args": [
        "--i",
        "--config",
        "jest.config.js",
        "--",
        "_tests/invoice/__test__/Invoices_with_diferent_scenarios.test.js",
        "--runTestsByPath",
        "--testNamePattern",
        "\"^All the invoices with different items\\sGet invoices with different items for a given opco$\""
      ],
      "env": {
        "TZ": "Etc/UTC"
      }
    }
  ]
}
